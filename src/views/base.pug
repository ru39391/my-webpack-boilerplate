include libs/mixins

block meta
  - var pageClass = '';
  - var title = 'Базовый шаблон';

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    title #{title}
    meta(name="keywords" content="")
    meta(name="description" content="")

  body(class=pageClass)
    block header
      include base/header.pug

    block wrapper
      section.wrapper
        a(href="../img/bk.jpg") #{title}

        img(src="../img/bk.jpg")
        //+icon('terminal-fill')

    block footer
      include base/footer.pug
